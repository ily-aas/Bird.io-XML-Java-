<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Observations">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="10dp"
        android:background="#2196F3"
        android:backgroundTint="#2196F3"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/burgerNavMap"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingTop="15dp"
            android:paddingRight="130dp"
            app:srcCompat="@drawable/burgernav_bar" />

        <ImageButton
            android:id="@+id/profileMap"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="navToProfile"
            android:paddingLeft="130dp"
            android:paddingTop="5dp"
            app:srcCompat="@drawable/profile_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="663dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="264dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="OBSERVATIONS"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/birdLocationName"
            android:layout_width="290dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Location name"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/birdName"
            android:layout_width="289dp"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Bird name"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/birdCount"
            android:layout_width="288dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Bird count"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/submitObservationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:backgroundTint="#2196F3"
                android:onClick="submitBirdObservation"
                android:text="SUBMIT"
                android:textColor="#FFFFFFFF"
                android:textSize="12sp" />

            <Button
                android:id="@+id/viewObsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:backgroundTint="#2196F3"
                android:onClick="toViewObs"
                android:text="VIEW OBSERVATIONS"
                android:textColor="#FFFFFFFF" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:backgroundTint="#2196F3"
            android:onClick="returnToHome"
            app:srcCompat="@drawable/baseline_keyboard_return_24" />

    </LinearLayout>

</LinearLayout>